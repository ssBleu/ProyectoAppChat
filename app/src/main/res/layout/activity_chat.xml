<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChatActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Barra superior con flecha, lupa y 3 puntos -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/my_secondary"
            android:padding="8dp">

            <!-- Flecha para retroceder -->
            <ImageView
                android:id="@+id/backArrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/back"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:contentDescription="Flecha atrás"
                app:tint="@color/white"/>

            <!-- Texto "CONTACTOS" -->
            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CONTACTOS"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_centerInParent="true"/>
            <!-- Barra de búsqueda con lupa -->
            <ImageView
                android:id="@+id/searchIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@id/optionsMenu"
                android:layout_centerVertical="true"
                android:contentDescription="Lupa"
                android:src="@android:drawable/ic_menu_search"
                app:tint="@color/white"
                android:layout_marginEnd="16dp"/>

            <!-- Tres puntos de opciones -->
            <ImageView
                android:id="@+id/optionsMenu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/more"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:contentDescription="Opciones"
                app:tint="@color/white"/>

        </RelativeLayout>

        <!-- Lista de contactos -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewContacts"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical"
            android:padding="8dp"/>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>